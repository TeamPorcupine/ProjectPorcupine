<?xml version="1.0" encoding="utf-8"?>
<Categories>
  <Category Name="general">
    <OptionHeading Name="autosave">
      <Option Name="autosave_every" Key="general_autosave_interval" DefaultValue="10" ClassName="AutosaveIntervalNumberField" />
      <Option Name="max_autosaves" Key="general_autosave_maxFiles" DefaultValue="5" ClassName="AutosaveNumberField" />
    </OptionHeading>
    <OptionHeading Name="localization">
      <Option Name="language" Key="general_localization_language" DefaultValue="en_US" ClassName="LocalizationComboBox" />
      <Option Name="auto_update_language" Key="general_localization_autoUpdate" DefaultValue="true" ClassName="GenericToggle" />
    </OptionHeading>
  </Category>
  <Category Name="sound">
    <OptionHeading Name="volume">
      <Option Name="master_volume" Key="sound_volume_master" DefaultValue="1" ClassName="SoundSlider">
        <CustomOptions SoundChannel="master"/>
      </Option>
      <Option Name="music_volume" Key="sound_volume_music" DefaultValue="1" ClassName="SoundSlider">
        <CustomOptions SoundChannel="music"/>
      </Option>
      <Option Name="game_volume" Key="sound_volume_game" DefaultValue="1" ClassName="SoundSlider">
        <CustomOptions SoundChannel="gameSounds"/>
      </Option>
      <Option Name="alert_volume" Key="sound_volume_alerts" DefaultValue="1" ClassName="SoundSlider">
        <CustomOptions SoundChannel="alerts"/>
      </Option>
      <Option Name="ui_volume" Key="sound_volume_ui" DefaultValue="1" ClassName="SoundSlider">
        <CustomOptions SoundChannel="UI"/>
      </Option>
    </OptionHeading>
    <OptionHeading Name="advanced">
      <Option Name="sound_device" Key="sound_advanced_device" DefaultValue="0" ClassName="SoundDeviceComboBox" />
      <Option Name="locational_sound" Key="sound_advanced_locational" DefaultValue="true" ClassName="GenericToggle" />
    </OptionHeading>
  </Category>
  <Category Name="video">
    <OptionHeading Name="general">
      <Option Name="ui_skin" Key="video_general_uiSkin" DefaultValue="0" ClassName="UISkinComboBox" />
      <Option Name="quality" Key="video_general_quality" DefaultValue="2" ClassName="QualityComboBox" />
      <Option Name="vsync" Key="video_general_vsync" DefaultValue="0" ClassName="VSyncComboBox" />
    </OptionHeading>
    <OptionHeading Name="advanced">
      <Option Name="soft_particles" Key="video_advanced_particles" DefaultValue="true" ClassName="SoftParticlesToggle" />
      <Option Name="shadows" Key="video_advanced_shadows" DefaultValue="0" ClassName="ShadowComboBox" />
      <Option Name="anisotropic_filtering" Key="video_advanced_anisotropicFiltering" DefaultValue="2" ClassName="AnisotropicFilteringComboBox" />
      <Option Name="aa" Key="video_advanced_aa" DefaultValue="0" ClassName="AAComboBox" />
    </OptionHeading>
    <OptionHeading Name="window">
      <Option Name="fullscreen" Key="video_window_mode" DefaultValue="true" ClassName="FullScreenToggle" />
      <Option Name="resolution" Key="video_window_resoultion" DefaultValue="0" ClassName="ResolutionComboBox" />
    </OptionHeading>
  </Category>
  <Category Name="developer">
    <OptionHeading Name="general">
      <Option Name="developer_mode" Key="developer_general_developerMode" DefaultValue="false" ClassName="DeveloperModeToggle" />
      <Option Name="logging_level" Key="developer_general_loggingLevel" DefaultValue="false" ClassName="GenericToggle" />
    </OptionHeading>
    <OptionHeading Name="console">
      <Option Name="scroll_sensitivity" Key="developer_console_scrollSensitivity" DefaultValue="6" ClassName="ScrollSensitivitySlider" />
      <Option Name="time_stamps" Key="developer_console_timeStamp" DefaultValue="false" ClassName="TimeStampToggle" />
      <Option Name="console_enable" Key="developer_console_enableDevConsole" DefaultValue="true" ClassName="DeveloperConsoleToggle" />
      <Option Name="font_size" Key="developer_console_fontSize" DefaultValue="15" ClassName="FontSizeSlider"></Option>
    </OptionHeading>
    <OptionHeading Name="utilities">
      <Option Name="performance_hud" Key="developer_utilities_performanceHUD" DefaultValue="none" ClassName="PerformanceHUDComboBox" />
    </OptionHeading>
  </Category>
</Categories>