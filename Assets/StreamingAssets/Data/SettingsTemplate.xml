<?xml version="1.0" encoding="utf-8"?>
<Categories>
  <Category Name="general">
    <OptionHeading Name="autosave">
      <Option Name="autosave_every" Key="AutosaveInterval" DefaultValue="10" ClassName="AutosaveIntervalNumberField" />
      <Option Name="max_autosaves" Key="AutosaveFiles" DefaultValue="5" ClassName="AutosaveNumberField" />
    </OptionHeading>
    <OptionHeading Name="localization">
      <Option Name="language" Key="localization" DefaultValue="en_US" ClassName="LocalizationComboBox" />
    </OptionHeading>
  </Category>
  <Category Name="sound">
    <OptionHeading Name="volume">
      <Option Name="master_volume" Key="masterVolume" DefaultValue="1" ClassName="SoundSlider" />
      <Option Name="music_volume" Key="DialogBoxSettings_musicVolume" DefaultValue="1" ClassName="SoundSlider" />
    </OptionHeading>
  </Category>
  <Category Name="video">
    <OptionHeading Name="quality_settings">
      <Option Name="ui_skin" Key="UISkin" DefaultValue="0" ClassName="UISkinComboBox" />
      <Option Name="quality" Key="DialogBoxSettings_qualityDropdown" DefaultValue="2" ClassName="QualityComboBox" />
      <Option Name="vsync" Key="DialogBoxSettings_vSyncDropdown" DefaultValue="0" ClassName="VSyncComboBox" />
    </OptionHeading>
    <OptionHeading Name="window_settings">
      <Option Name="fullscreen" Key="DialogBoxSettings_fullScreenToggle" DefaultValue="true" ClassName="FullScreenToggle" />
      <Option Name="resolution" Key="DialogBoxSettings_resolutionDropdown" DefaultValue="0" ClassName="ResolutionComboBox" />
    </OptionHeading>
  </Category>
  <Category Name="developer">
    <OptionHeading Name="developer_console_settings">
      <Option Name="console_scroll_sensitivity" Key="DialogBoxSettingsDevConsole_scrollSensitivity" DefaultValue="6" ClassName="ScrollSensitivitySlider" />
      <Option Name="console_time_stamps" Key="DialogBoxSettingsDevConsole_timeStampToggle" DefaultValue="false" ClassName="TimeStampToggle" />
      <Option Name="developer_console" Key="DialogBoxSettingsDevConsole_devConsoleToggle" DefaultValue="true" ClassName="DeveloperConsoleToggle" />
      <Option Name="console_font_size" Key="DialogBoxSettingsDevConsole_consoleFontSize" DefaultValue="15" ClassName="FontSizeSlider"></Option>
    </OptionHeading>
    <OptionHeading Name="utilities">
      <Option Name="performance_hud" Key="DialogBoxSettingsDevConsole_performanceGroup" DefaultValue="1" ClassName="PerformanceHUDComboBox" />
    </OptionHeading>
    <OptionHeading Name="god_mode_settings">
      <Option Name="developer_mode" Key="DialogBoxSettingsDevConsole_developerModeToggle" DefaultValue="false" ClassName="DeveloperModeToggle" />
    </OptionHeading>
  </Category>
</Categories>
