    <IsEnterable FunctionName="IsEnterable_Door" />
    <GetSpriteName FunctionName="GetSpriteName_Airlock" />

    <LocalizationCode>furn_airlock</LocalizationCode>
    <UnlocalizedDescription>furn_airlock_desc</UnlocalizedDescription>
  </Furniture>


