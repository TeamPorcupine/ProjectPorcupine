  <Furniture objectType="Heater">
    <Name>Heater</Name>
    <Description>Raises temperature in the room.</Description>
    <BaseType>Temperature</BaseType>
    <MovementCost>10</MovementCost>
    <Width>1</Width>
    <Height>1</Height>
